{% extends 'ProfileBundle::base.html.twig' %}

{% block page_css %}

    <style>
        html, body{
            background: #18253f;
        }
        #body_content{
            height:100%;
        }
        /* NAVIGATION */
        nav {
            width: 100%;
            margin: 0 auto;
            background: #131e33;
            padding: 10px 0;
        }
        nav ul {
            list-style: none;
            text-align: center;
            margin-top: 0;
            margin-bottom: 0;
        }
        nav ul li {
            display: inline-block;
        }
        nav ul li a {
            display: block;
            padding: 15px;
            text-decoration: none;
            color: #aaa;
            font-weight: 800;
            text-transform: uppercase;
            margin: 0 10px;
        }
        nav ul li a,
        nav ul li a:after,
        nav ul li a:before {
            transition: all .5s;
        }
        nav ul li a:hover {
            color: #555;
            text-decoration: none;
        }
        /* SHIFT */
        nav.shift ul li a {
            position:relative;
            z-index: 1;
        }        


        /* Brackets go out */
        nav.shift a:before, nav.shift a:after
        {
            position: absolute;
            opacity: 0;
            font-size: 35px;
            top: 0px;
            transition: all 0.3s;
        }
        nav.shift li#profile_picture:after {
            content: "";
            transform: translateX(-10px);
            left: 0px;
            opacity:0;
        }

        nav.shift a:before
        {
            content: '(';
            left: 0px;
            transform: translateX(10px);
        }

        nav.shift a:after
        {
            content: ')';
            right: 0px;
            transform: translateX(-10px);
        }

        nav.shift a:hover:before, nav.shift a:hover:after
        {
            opacity: 1;
            transform: translateX(0px);
        }
        nav.shift li#profile_picture:hover:after {
            opacity: 1;
            transform: translateX(0px);
        }
        .page-header-img:before{
            display: block;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            content: "";
            background-image: url({{asset('bundles/profile/img/page-header2.jpg')}});
            background-repeat: no-repeat;
            background-size: cover;
            background-position-y: center;
            opacity:0.5;
        }
        .page-footer-img:before{
            display: block;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            content: "";
            background-image: url({{asset('bundles/profile/img/page-footer.jpg')}});
            background-repeat: no-repeat;
            background-size: cover;
            background-position-y: center;
            opacity:0.5;
        }

        .floating-bar{
            position: fixed;
            left: 1%;
            top: 50%;
        }
    </style>
{% endblock page_css %}